{
    "name": "alex-sanchezzz/reactguzzle",
    "description": "Asyncronous Guzzle adapter powered by react/http-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandr Kirilyuk",
            "email": "sanchezzzov@gmail.com",
            "homepage": "https://cvek.ru/"
        }
    ],
    "require": {
        "php": "^5.4|^7.0",
        "guzzlehttp/guzzle": "^6.5.5",
        "wyrihaximus/react-guzzle-http-client": "^3.0.1|^3.1",
        "guzzlehttp/psr7": "^1.6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0|^5.0",
        "phake/phake": "~1.0.6",
        "squizlabs/php_codesniffer": "~1.5.6",
        "vectorface/dunit": "~2.0"
    },
    "suggest": {
        "guzzlehttp/oauth-subscriber": "0.1.* needed for oauth example"
    },
    "autoload": {
        "psr-4": {
            "WyriHaximus\\React\\Guzzle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WyriHaximus\\React\\Tests\\Guzzle\\": "tests/"
        }
    }
}
